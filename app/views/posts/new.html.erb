<h3>Upload an image</h3>
<div class="form-wrapper">
  <%= simple_form_for @post, html: {class: 'form-horizontal', multipart: true } do |f| %>
    <div class="form-group">
      <%= f.input :image  %>
    </div>
    <div class="form-group text-center">
      <%= f.input :caption %>
    </div>
    <div class="form-group text-center">
      <%= f.submit "Create", class: 'btn btn-default' %>
    </div>
  <% end %>
</div>
