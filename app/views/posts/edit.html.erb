<div class="container">
    <div class="row">
      <div class="col-sm-6 col-sm-offset-3 col-md-4 col-md-offset-4">
        <div class="panel">
          <div class="panel-heading">
            <h4>Update Post</h4>
          </div>
          <div class="panel-body">
            <%= render 'form' %>
          </div>
        </div>
      </div>
    </div>
  <div class="text-center edit-links">
    <%= link_to "Delete Post", post_path(@post), method: :delete, class: 'btn btn-danger', data: {confirm: "Are you sure you want to delete this post?"} %>
    <%= link_to "cancel", posts_path, class: 'btn btn-default' %>
  </div>
</div>
