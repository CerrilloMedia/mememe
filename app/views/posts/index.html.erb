<h1>MeMeMe</h1>

<% if current_user %>
  <%= link_to "New Post", new_post_path, class: 'btn btn-default' %>
<% end %>
<br/>
<div class="">
  <h3>
    Current posts:
  </h3>
<div class="posts-wrapper row">
  <% @posts.each do |post| %>
    <div class="post">
      <div class="post-head">
        <div class="name">
          Ben Walker
        </div>
      </div>
      <div class="image center-block">
        <%= link_to image_tag(post.image.url(:medium), class: 'img-responsive'), post_path(post) %>
      </div>
      <p class="caption">
        <%= post.caption %>
      </p>
    </div>
  <% end %>
</div>
