<div class="container">
  <h1>MeMeMe</h1>

  <% if current_user %>
    <%= link_to "New Post", new_post_path, class: 'btn btn-default' %>
  <% end %>
  <br/>
  <div class="">
    <h3>
      Current posts:
    </h3>
  <div class="posts-wrapper row">
    <% @posts.each do |post| %>
      <%= render partial: 'post', locals: {post: post} %>
    <% end %>
  </div>
</div>
