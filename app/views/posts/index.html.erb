<div class="container">
  <h1>MeMeMe</h1>

  <% if current_user %>
    <%= link_to "New Post", new_post_path, class: 'btn btn-default' %>
  <% end %>
  <br/>
  <div class="">
    <h3>
      Current posts:
    </h3>
  <div id="posts">
    <%= render 'posts' %>
  </div>
  <div id="paginator" class="text-center">
    <%= link_to_next_page @posts, 'LOAD', remote: true, id: 'load_more', class: 'btn btn-default' %>
  </div>
  <%= render partial: 'paginate', locals: { posts: @posts} %>
</div>
