<div class="posts-wrapper">
  <div class="post">
    <div class="post-body">
      <div class="image-wrap">
        <%= form_for @user, url: { action: "update"}, html: {multipart: true} do |f| %>
          <div class="row">
            <div class="col-md-12">
              <div class="form-group text-center">
                <h4> Change your profile image:</h4>
                <div class="img-circle">
                  <%= profile_avatar_select(@user) %>
                </div>
                <div class="col-xs-12">
                  <div class="col-xs-12 input-group col-sm-8 col-sm-offset-2">
                  <div class="input-group-btn" onclick="uploadfile(event)" style="cursor: pointer;">
                    <div class="btn btn-primary">Upload Avatar</div>
                  </div>
                  <input type="text" class="form-control" disabled="true" style="cursor: default;" id="upload-filename">
                </div>
                </div>
                <%= f.file_field :avatar, id:"upload-button", class: "hidden", onChange: 'loadFile(event)' %>
              </div>
            </div>
          </div>
          <div class="row">
            <div class="col-md-12">
              <div class="form-group text-center">
                <h4> Change your profile bio:</h4>
                <div class="col-xs-12">
                  <%= f.text_area :bio, label: false, rows: 4, class: 'col-xs-12 col-sm-8 col-sm-offset-2' %>
                </div>
              </div>
            </div>
          </div>
          <div class="form-group text-center">
            <%= f.submit "Update Profile", class: 'btn btn-success' %>
          </div>
        <% end %>
      </div>
    </div>
  </div>
</div>
